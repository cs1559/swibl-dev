/**
 * Back end css stylesheet for JLeague
 **/
 
/** JOOMLA OVERRIDES **/
.nav-tabs > .active > a,
.nav-tabs > .active > a:hover {
	color: white !important;
	background-color: blue !important;
	border: 1px solid #ddd !important;
	/* border-bottom-color: transparent; */
	cursor: default !important;
}

 
/**  JLeague - List table styles **/
th.jl-center,
td.jl-center {
	text-align: center !important;
} 

/** JLEague Logo - Dashboard **/ 
.jl-logo-image {
	float: left;
	padding-right: 10px;	
}

/** Admin - Input Fields **/
.jl-admin-table {
	width: 85%;
}
.jl-admin-textarea {
	width: 90%;
	height: 100px;
}

/** Admin - Block **/
.jl-admin-block {
	border: 1px solid #e3e3e3;
	padding: 9px;
	border-radius: 3px;
	background-color: #f5f5f5
}
/** Admin Filter Table-Row **/
.jl-admin-filter-row {
	margin-bottom: 15px;
}



.inputOn {
	display: inline;
}

.inputOff {
	display: none;
}

div#templates-list
{
	padding: 3px;
	background: #F3F6E9 none repeat scroll 0 0;
	border-bottom: 1px solid #D5D5D5;
	border-top: 1px solid #D5D5D5;
}

div#template-files
{
	margin: 20px 0 0 0;
	padding: 3px;
	background:#F3F6E9 none repeat scroll 0 0;
	border-bottom:1px solid #D5D5D5;
	border-top:1px solid #D5D5D5;
}

textarea.template-editor
{
	width:95%;
	font-family:monospace;
	font-size:13px;
	padding-top:11px;
	line-height:16px;
	height: 500px; 
	padding-left:30px;
	background: url(line-numbers.png) no-repeat;
	background-attachment: scroll; 
	margin-right:26px
}

div.info
{
	background: #C3D2E5;
	color: #0055BB;
	padding: 10px;
	border-bottom: 3px solid #84A7DB;
	border-top: 3px solid #84A7DB;
	font-weight: 700;
}

